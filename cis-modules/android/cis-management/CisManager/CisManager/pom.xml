<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.societies</groupId>
  <artifactId>CisManagerLight</artifactId>
  <version>${release.version}</version>
  <packaging>apk</packaging>
  <name>CisManagerLight</name>

<!--    <parent> -->
<!--         <groupId>org.societies</groupId> -->
<!--         <artifactId>CisManager-parent</artifactId> -->
<!--         <version>${release.version}</version> -->
<!--     </parent> -->

   <parent>
        <groupId>org.societies</groupId>
        <artifactId>android-parent</artifactId>
        <version>0.1</version>
        <relativePath>../../../../../parent/android.xml</relativePath>
   </parent>

    <!-- I copied this from Alan's CSS mananger. -->
  <dependencies>
	<dependency>
		<groupId>org.asmack</groupId>
	        <artifactId>asmack</artifactId>
	</dependency>
	<dependency>
            <groupId>android</groupId>
            <artifactId>android</artifactId>
        </dependency>
	<dependency>
	    	<groupId>org.societies.api.external</groupId>
	    	<artifactId>societies-api</artifactId>
	    	<version>${release.version}</version>
	</dependency>
	<dependency>
 		 <groupId>org.slf4j</groupId>
  		<artifactId>slf4j-api</artifactId>
		<version>1.6.2</version>
	</dependency>	
	<dependency>
	    <groupId>xerces</groupId>
	    <artifactId>xercesImpl</artifactId>
	    <version>2.10.0</version>
	    <exclusions>
		<exclusion>
		    <groupId>xml-apis</groupId> 
		    <artifactId>xml-apis</artifactId>
		</exclusion>
	    </exclusions>
	</dependency>
	<dependency>
		<groupId>org.societies</groupId>
		<artifactId>AndroidAgentApi</artifactId>
		<version>${version.comm}</version>
	</dependency>
	<dependency>
	    	<groupId>org.societies.utilities</groupId>
	    	<artifactId>DBC</artifactId>
	    	<version>${release.version}</version>
	</dependency>
  </dependencies>
  <build>
    <finalName>${project.artifactId}</finalName>
	<sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>maven-android-plugin</artifactId>
                <version>2.9.0-issue170</version>
		<extensions>true</extensions>
                <configuration>
                    <sdk>
			<platform>8</platform>
                    <path>${android.home}</path>
		    </sdk>
		    <emulator>
		        <!-- the name of the avd device to use for starting the emulator -->
		        <avd>Test22Device</avd>
		    </emulator>
		    <undeployBeforeDeploy>true</undeployBeforeDeploy>
		    <unpackDependencies>false</unpackDependencies>
		    <fileToUnpack>${project.artifactId}.${project.version}-shaded.apk</fileToUnpack>
		    <jvmArguments>
			    <jvmArgument>-Xms256m</jvmArgument>
			    <jvmArgument>-Xmx512m</jvmArgument>
		    </jvmArguments>
                </configuration>
            </plugin>
	    	<plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-shade-plugin</artifactId>
		    <version>1.5</version>
		    <configuration>
			    <shadedArtifactAttached>true</shadedArtifactAttached>
			    <finalName>${project.artifactId}.${project.version}-shaded</finalName>
			    <relocations>
				    <relocation>
					    <pattern>javax.xml.bind</pattern>
					    <shadedPattern>jaxb</shadedPattern>
				    </relocation>
				    <relocation>
					    <pattern>javax.xml.stream</pattern>
					    <shadedPattern>stax</shadedPattern>
				    </relocation>
			    </relocations>
		    </configuration>
	    </plugin>
        </plugins>
    <pluginManagement>
    	<plugins>
    		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
    		<plugin>
    			<groupId>org.eclipse.m2e</groupId>
    			<artifactId>lifecycle-mapping</artifactId>
    			<version>1.0.0</version>
    			<configuration>
    				<lifecycleMappingMetadata>
    					<pluginExecutions>
    						<pluginExecution>
    							<pluginExecutionFilter>
    								<groupId>
    									com.jayway.maven.plugins.android.generation2
    								</groupId>
    								<artifactId>
    									android-maven-plugin
    								</artifactId>
    								<versionRange>
    									[3.0.0,)
    								</versionRange>
    								<goals>
    									<goal>proguard</goal>
    								</goals>
    							</pluginExecutionFilter>
    							<action>
    								<ignore></ignore>
    							</action>
    						</pluginExecution>
    					</pluginExecutions>
    				</lifecycleMappingMetadata>
    			</configuration>
    		</plugin>
    	</plugins>
    </pluginManagement>
  </build>
</project>
