<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	xmlns:context="http://www.springframework.org/schema/context">
	
  <!-- regular spring configuration file defining the beans for this
       bundle. We've kept the osgi definitions in a separate 
       configuration file so that this file can easily be used
       for integration testing outside of an OSGi environment -->
   
   <bean id="SuggestedCommunityAnalyser" class="org.societies.orchestration.CommunityLifecycleManagement.impl.SuggestedCommunityAnalyser" 
   depends-on="CssDirectory, CssDiscovery, CisActivityFeed, ServiceSharingRecord, CisActivityFeed, CisRecord, CisManager, UserCtxSimilarityEvaluator, UserCtxPredictionManager, UserCtxDBManager, CommunityCtxBroker, UserCtxBroker, UserCtxHistoryManager, IIdentity, CommManagerBundle, UserFeedback, UserFeedbackCallback, CommunityRecommender" init-method="initialiseSuggestedCommunityAnalyser">
   <property name="linkedCss" ref="IIdentity"></property>
   <property name="cisManager" ref="CisManager"></property>
   <property name="userContextDatabaseManager" ref="UserCtxDBMgr"></property>
   <property name="userContextBroker" ref="UserCtxBroker"></property>
   <property name="userContextBrokerCallback" ref="UserCtxBrokerCallback"></property>
   <property name="communityContextBroker" ref="CommunityCtxBroker"></property>
   <property name="commManager" ref="CommManagerBundle"></property>
   <property name="userFeedback" ref="UserFeedback"></property>
   <property name="userFeedbackCallback" ref="UserFeedbackCallback"></property>
   <property name="communityRecommender" ref="CommunityRecommender"></property>
   </bean>
   
   <bean id="CommunityRecommender" class="org.societies.orchestration.CommunityLifecycleManagement.impl.CommunityRecommender" 
   depends-on="CssDirectory, CssDiscovery, CisActivityFeed, ServiceSharingRecord, CisActivityFeed, CisRecord, CisManager, UserCtxSimilarityEvaluator, UserCtxPredictionManager, UserCtxDBManager, CommunityCtxBroker, UserCtxBroker, UserCtxHistoryManager, IIdentity, CommManagerBundle, UserFeedback, UserFeedbackCallback" init-method="initialiseCommunityRecommender">
   <property name="linkedCss" ref="IIdentity"></property>
   <property name="cisManager" ref="CisManager"></property>
   <property name="userContextDatabaseManager" ref="UserCtxDBMgr"></property>
   <property name="userContextBroker" ref="UserCtxBroker"></property>
   <property name="userContextBrokerCallback" ref="UserCtxBrokerCallback"></property>
   <property name="communityContextBroker" ref="CommunityCtxBroker"></property>
   <property name="commManager" ref="CommManagerBundle"></property>
   <property name="userFeedback" ref="UserFeedback"></property>
   <property name="userFeedbackCallback" ref="UserFeedbackCallback"></property>
   </bean>
<!--   <context:component-scan base-package="org.societies.orchestration.CommunityLifecycleManagement.impl"></context:component-scan> -->
</beans>