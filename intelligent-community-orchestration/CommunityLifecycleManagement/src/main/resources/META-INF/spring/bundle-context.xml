<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	xmlns:context="http://www.springframework.org/schema/context">
	
  <!-- regular spring configuration file defining the beans for this
       bundle. We've kept the osgi definitions in a separate 
       configuration file so that this file can easily be used
       for integration testing outside of an OSGi environment -->

   <bean id="CommunityLifecycleManagement" class="org.societies.orchestration.CommunityLifecycleManagement.impl.CommunityLifecycleManagement" 
   depends-on="CssDirectory, CssDiscovery, CisActivityFeed, ServiceSharingRecord, CisActivityRecord, CisRecord, UserCtxSimilarityEvaluator, UserCtxPredictionManager, UserCtxDBManager, UserCtxHistoryManager, EntityIdentifier" init-method="initialiseCommunityLifecycleManagement">
   <property name="CssDirectory" ref="CssDirectory"></property>
   <property name="CssDiscovery" ref="CssDiscovery"></property>
   <property name="CisActivityFeed" ref="CisActivityFeed"></property>
   <property name="ServiceSharingRecord" ref="ServiceSharingRecord"></property>
   <property name="CisActivityRecord" ref="CisActivityRecord"></property>
   <property name="CisRecord" ref="CisRecord"></property>
   <property name="UserCtxSimilarityEvaluator" ref="UserCtxSimilarityEvaluator"></property>
   <property name="UserCtxPredictionManager" ref="UserCtxPredictionManager"></property>
   <property name="UserCtxDBManager" ref="UserCtxDBManager"></property>
   <property name="UserCtxHistoryManager" ref="UserCtxHistoryManager"></property>
   <property name="EntityIdentifier" ref="EntityIdentifier"></property>
   </bean>
<!--   <context:component-scan base-package="org.societies.orchestration.CommunityLifecycleManagement.impl"></context:component-scan> -->
</beans>