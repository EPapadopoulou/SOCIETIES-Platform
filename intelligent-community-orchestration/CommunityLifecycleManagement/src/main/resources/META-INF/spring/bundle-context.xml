<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	xmlns:context="http://www.springframework.org/schema/context">
	
  <!-- regular spring configuration file defining the beans for this
       bundle. We've kept the osgi definitions in a separate 
       configuration file so that this file can easily be used
       for integration testing outside of an OSGi environment -->
   
   <bean id="SuggestedCommunityAnalyser" class="org.societies.orchestration.CommunityLifecycleManagement.impl.SuggestedCommunityAnalyser" 
   depends-on="ICssDirectory, ICssDiscovery, ICssActivityFeed, ServiceSharingRecord, ICisActivityFeed, ICisRecord, ICisManager, ICtxBroker, IIdentity, ICommManager, IUserFeedback, IUserFeedbackCallback, CommunityRecommender" init-method="initialiseSuggestedCommunityAnalyser">
   <property name="linkedCss" ref="IIdentity"></property>
   <property name="cisManager" ref="ICisManager"></property>
   <!-- <property name="userContextDatabaseManager" ref="UserCtxDBMgr"></property>-->
   <property name="userContextBroker" ref="ICtxBroker"></property>
   <!-- <property name="userContextBrokerCallback" ref="UserCtxBrokerCallback"></property>-->
   <!-- <property name="communityContextBroker" ref="CommunityCtxBroker"></property>-->
   <property name="commManager" ref="ICommManager"></property>
   <property name="userFeedback" ref="IUserFeedback"></property>
   <property name="userFeedbackCallback" ref="IUserFeedbackCallback"></property>
   <property name="communityRecommender" ref="CommunityRecommender"></property>
   <property name="privacyDataManager" ref="IPrivacyDataManager"></property>
   <property name="personalisationManager" ref="IPersonalisationManager"></property>
   <property name="personalisationCallback" ref="IPersonalisationCallback"></property>
   </bean>
   
   <bean id="CommunityRecommender" class="org.societies.orchestration.CommunityLifecycleManagement.impl.CommunityRecommender" 
   depends-on="ICssDirectory, ICssDiscovery, ICssActivityFeed, ServiceSharingRecord, ICisActivityFeed, ICisRecord, ICisManager, ICtxBroker, IIdentity, ICommManager, IUserFeedback, IUserFeedbackCallback" init-method="initialiseCommunityRecommender">
   <property name="linkedCss" ref="IIdentity"></property>
   <property name="cisManager" ref="ICisManager"></property>
   <!-- <property name="userContextDatabaseManager" ref="UserCtxDBMgr"></property>-->
   <property name="userContextBroker" ref="ICtxBroker"></property>
   <!-- <property name="userContextBrokerCallback" ref="UserCtxBrokerCallback"></property>-->
   <!-- <property name="communityContextBroker" ref="CommunityCtxBroker"></property>-->
   <property name="commManager" ref="ICommManager"></property>
   <property name="userFeedback" ref="IUserFeedback"></property>
   <property name="userFeedbackCallback" ref="IUserFeedbackCallback"></property>
   </bean>
<!--   <context:component-scan base-package="org.societies.orchestration.CommunityLifecycleManagement.impl"></context:component-scan> -->
</beans>