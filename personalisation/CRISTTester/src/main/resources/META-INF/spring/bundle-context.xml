<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- regular spring configuration file defining the beans for this bundle. 
		We've kept the osgi definitions in a separate configuration file so that 
		this file can easily be used for integration testing outside of an OSGi environment -->

	<bean name="CRISTTester"
		class="org.societies.personalisation.CRISTTesting.impl.CRISTTesting"
		depends-on="CRISTUserIntentPredictor" init-method="initialiseCRISTTesting">
		<property name="cristPredictor" ref="CRISTUserIntentPredictor"></property>
	</bean>

</beans>