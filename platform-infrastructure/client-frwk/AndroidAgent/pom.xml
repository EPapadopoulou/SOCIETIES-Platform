<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.societies</groupId>
    <artifactId>AndroidAgent</artifactId>
    <version>${version.comm}</version>
    <packaging>apk</packaging>

    <parent>
	    <groupId>org.societies</groupId>
	    <artifactId>android-parent</artifactId>
	    <version>0.1</version>
    </parent>

    <dependencies>
	<dependency>
	    <groupId>org.societies.comm.xmpp</groupId>
	    <artifactId>CommunicationFrameworkCommons</artifactId>
	    <version>${version.comm}</version>
	</dependency>
	<dependency>
	    <groupId>org.societies.utilities</groupId>
	    <artifactId>DBC</artifactId>
	    <version>${release.version}</version>
	</dependency>
        <dependency>
            <groupId>android</groupId>
            <artifactId>android</artifactId>
        </dependency>
	<dependency>
	    <groupId>org.slf4j</groupId>
	    <artifactId>slf4j-android</artifactId>
	    <version>1.6.1-RC1</version>
	</dependency>
	<dependency>
		<groupId>org.societies</groupId>
		<artifactId>AndroidAgentApi</artifactId>
		<version>${version.comm}</version>
	</dependency>
	<dependency> <!-- http://code.google.com/p/asmack/ -->
		<groupId>asmack</groupId>
		<artifactId>asmack</artifactId>
		<version>2010.12.11</version>
	</dependency>
    </dependencies>

    <build>
<finalName>${project.artifactId}</finalName>
	    <pluginManagement>
		    <plugins>
			    <plugin>
				    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>maven-android-plugin</artifactId>
                    <version>2.9.0-SNAPSHOT</version>
                    <extensions>true</extensions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>maven-android-plugin</artifactId>
                <configuration>
                    <sdk>
			<platform>8</platform>
                    </sdk>
		    <unpackDependencies>false</unpackDependencies>
		    <fileToUnpack>${project.artifactId}.${project.version}-shaded.apk</fileToUnpack>
		    <jvmArguments>
			    <jvmArgument>-Xms256m</jvmArgument>
			    <jvmArgument>-Xmx512m</jvmArgument>
		    </jvmArguments>
                </configuration>
            </plugin>
	    <plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-shade-plugin</artifactId>
		    <version>1.5</version>
		    <configuration>
			    <shadedArtifactAttached>true</shadedArtifactAttached>
			    <finalName>${project.artifactId}.${project.version}-shaded</finalName>
			    <relocations>
				    <relocation>
					    <pattern>javax.xml.bind</pattern>
					    <shadedPattern>jaxb</shadedPattern>
				    </relocation>
				    <relocation>
					    <pattern>javax.xml.stream</pattern>
					    <shadedPattern>stax</shadedPattern>
				    </relocation>
			    </relocations>
		    </configuration>
	    </plugin>
        </plugins>
    </build>
</project>
