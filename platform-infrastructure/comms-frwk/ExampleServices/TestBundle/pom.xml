<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
     
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>spring-osgi-parent</artifactId>
		<version>RELEASE</version>
	 </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.societies.comms.test</groupId>
    <artifactId>TestBundle</artifactId>
    <packaging>bundle</packaging>
    <name>Test Bundle</name>
    <version>${version.comm}</version>

    <properties>
        <slf4j.version>1.5.0</slf4j.version>
        <spring.maven.artifact.version>2.5.6.SEC01</spring.maven.artifact.version>
        <spring.osgi.version>1.2.1</spring.osgi.version>
        <equinox.ver>3.2.2</equinox.ver>
    </properties>

    <dependencies>
    	<!-- Interface -->
    	<dependency>
			<groupId>org.societies.api.internal</groupId>
			<artifactId>societies-api-internal</artifactId>
			<scope>provided</scope>
		</dependency>
    	<dependency>
			<groupId>org.societies.api.external</groupId>
			<artifactId>societies-api</artifactId>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.societies.comm.xmpp.pubsub</groupId>
    		<artifactId>PubsubClient</artifactId>
	  		<version>${version.comm}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.societies.comm.xmpp.pubsub</groupId>
    		<artifactId>PubsubService</artifactId>
	  		<version>${version.comm}</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>org.springframework.spring-library</artifactId>
			<type>libd</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>${slf4j.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>com.springsource.slf4j.org.apache.commons.logging</artifactId>
		</dependency>
		<dependency>
			<groupId>org.simpleframework</groupId>
			<artifactId>simple-xml</artifactId>
			<version>2.6.4</version>
			<scope>provided</scope>
			<exclusions>
			    <!-- StAX is not available on Android -->
			    <exclusion>
			        <artifactId>stax</artifactId>
			        <groupId>stax</groupId>
			    </exclusion>
			    <exclusion>
			        <artifactId>stax-api</artifactId>
			        <groupId>stax</groupId>
			    </exclusion>
			    <!-- Provided by Android -->
			    <exclusion>
			        <artifactId>xpp3</artifactId>
			        <groupId>xpp3</groupId>
			    </exclusion>
			</exclusions>
		</dependency>
    </dependencies>

    <build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.0</version>
				<executions>
					<execution>
						<id>main-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>test.xsd</include>
							</schemaIncludes>
							<generateDirectory>${project.build.directory}/generated-sources/test</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>event-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>test#event.xsd</include>
							</schemaIncludes>
							<generatePackage>org.societies.test.event</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/event</generateDirectory>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<strict>true</strict>
					<verbose>false</verbose>
					<extension>true</extension>
					<readOnly>yes</readOnly>
					<removeOldOutput>true</removeOldOutput>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>net.java.dev.vcc.thirdparty</groupId>
						<artifactId>collection-setter-injector</artifactId>
						<version>0.5.0-1</version>
					</dependency>
				</dependencies>
			</plugin>
			
			<plugin>
				<groupId>org.societies.maven</groupId>
				<artifactId>jaxb2simple-maven-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<phase>process-sources</phase>
						<goals>
							<goal>convert</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
			 		<!-- <folderInputDirectory>${project.build.directory}/generated-sources/</folderInputDirectory> -->
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
    				<instructions>
    					<Import-Package>
    						org.springframework.beans.factory.annotation*;version="0",
    						org.springframework.stereotype*;version="0",
    						org.xmpp.packet*,
    						!org.gjt.*,
    						!org.jaxen.*,
    						!org.mortbay.*,
    						!org.relaxng.*,
    						!org.jvnet.staxex,
    						!org.jvnet.fastinfoset,
    						!com.sun.xml.fastinfoset.*,
    						!com.sun.msv.*,
    						org.societies.api.identity,
							*
    					</Import-Package>
    					<Export-Package>
    						org.societies.test,
    						org.societies.test.event
		           		</Export-Package>
		           		<Embed-Dependency>*;scope=compile</Embed-Dependency>
						<Embed-Transitive>false</Embed-Transitive>
		         	</instructions>
	       		</configuration>
			</plugin>		
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.societies.maven
										</groupId>
										<artifactId>
											jaxb2simple-maven-plugin
										</artifactId>
										<versionRange>
											[1.0,)
										</versionRange>
										<goals>
											<goal>convert</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.jvnet.jaxb2.maven2
										</groupId>
										<artifactId>
											maven-jaxb2-plugin
										</artifactId>
										<versionRange>
											[0.7.5,)
										</versionRange>
										<goals>
											<goal>generate</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
    </build>
</project>
