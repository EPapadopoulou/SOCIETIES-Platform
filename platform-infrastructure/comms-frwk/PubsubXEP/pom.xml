<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.societies</groupId>
		<version>0.1</version>
		<artifactId>version-parent</artifactId>
	</parent>
	<groupId>org.jabber.protocol.pubsub</groupId>
	<artifactId>PubsubXep</artifactId>
	<version>${release.version}</version>
	<name>PubsubXep</name>
	<packaging>jar</packaging>
	<dependencies>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<version>2.1.8</version>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>jabber.x.data</groupId>
			<artifactId>DataFormsXep</artifactId>
			<version>${release.version}</version>
		</dependency>
	</dependencies>
	
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>*.xjb</exclude>
					<exclude>*.xsd</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
		</resources>
		
		<!-- jaxb xjc generation: package names need to be defined per case (jaxb does not use the fragment part of the uri for generating the package name) -->
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.0</version>
				<executions>
					<execution>
						<id>pubsub-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>pubsub.xsd</include>
							</schemaIncludes>
							<episodes>
								<episode>
									<groupId>jabber.x.data</groupId>
									<artifactId>DataFormsXep</artifactId>
									<version>${release.version}</version>
								</episode>
							</episodes>
							<generateDirectory>${project.build.directory}/generated-sources/pubsub</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>errors-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>pubsub#errors.xsd</include>
							</schemaIncludes>
							<generatePackage>org.jabber.protocol.pubsub.errors</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/errors</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>owner-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>pubsub#owner.xsd</include>
							</schemaIncludes>
							<episodes>
								<episode>
									<groupId>jabber.x.data</groupId>
									<artifactId>DataFormsXep</artifactId>
									<version>${release.version}</version>
								</episode>
							</episodes>
							<generatePackage>org.jabber.protocol.pubsub.owner</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/owner</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>event-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaIncludes>
								<include>pubsub#event.xsd</include>
							</schemaIncludes>
							<episodes>
								<episode>
									<groupId>jabber.x.data</groupId>
									<artifactId>DataFormsXep</artifactId>
									<version>${release.version}</version>
								</episode>
							</episodes>
							<generatePackage>org.jabber.protocol.pubsub.event</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/event</generateDirectory>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<strict>true</strict>
					<verbose>false</verbose>
					<extension>true</extension>
					<readOnly>yes</readOnly>
					<removeOldOutput>true</removeOldOutput>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-resources-plugin</artifactId>
		        <version>2.5</version>
		        <configuration>
		        	<encoding>UTF-8</encoding>
		        </configuration>
	      	</plugin>
		</plugins>
	</build>
</project>
