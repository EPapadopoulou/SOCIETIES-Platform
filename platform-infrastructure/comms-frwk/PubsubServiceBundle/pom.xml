<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
     
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>spring-osgi-parent</artifactId>
		<version>0.1</version>
		<relativePath>../../../parent/spring-osgi.xml</relativePath>
	 </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.societies.comms.xmpp.pubsub</groupId>
    <artifactId>PubsubServiceBundle</artifactId>
    <packaging>bundle</packaging>
    <name>Pubsub Service Bundle</name>
    <version>0.0.1-SNAPSHOT</version>

    <properties>
        <slf4j.version>1.5.0</slf4j.version>
        <spring.maven.artifact.version>2.5.6.SEC01</spring.maven.artifact.version>
        <spring.osgi.version>1.2.1</spring.osgi.version>
        <equinox.ver>3.2.2</equinox.ver>
    </properties>

    <dependencies>
    	<dependency>
			<groupId>jabber.x.data</groupId>
			<artifactId>DataFormsXep</artifactId>
			<version>0.0.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.jabber.protocol.pubsub</groupId>
			<artifactId>PubsubXep</artifactId>
			<version>0.0.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.societies.comm.xmpp</groupId>
	  		<artifactId>CommunicationFrameworkCommons</artifactId>
	  		<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>${slf4j.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.beans</artifactId>
            <version>${spring.maven.artifact.version}</version>
            <scope>provided</scope>
            <exclusions>
              <exclusion>
                <groupId>org.apache.commons</groupId>
                <artifactId>com.springsource.org.apache.commons.logging</artifactId>
              </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.context</artifactId>
            <version>${spring.maven.artifact.version}</version>
            <scope>provided</scope>
            <exclusions>
              <exclusion>
                <groupId>org.apache.commons</groupId>
                <artifactId>com.springsource.org.apache.commons.logging</artifactId>
              </exclusion>
            </exclusions>
        </dependency>
        <dependency>
        	<groupId>org.osgi</groupId>
        	<artifactId>org.osgi.compendium</artifactId>
        	<version>4.2.0</version>
        	<scope>provided</scope>
        </dependency>
    </dependencies>

    
    <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
    				<instructions>
    					<Import-Package>
    						org.springframework.beans.factory.annotation*;version="0",
    						org.springframework.stereotype*;version="0",
    						org.xmpp.packet*,
    						!org.gjt.*,
    						!org.jaxen.*,
    						!org.mortbay.*,
    						!org.relaxng.*,
    						!org.jvnet.staxex,
    						!org.jvnet.fastinfoset,
    						!com.sun.xml.fastinfoset.*,
    						!com.sun.msv.*,
							*;resolution:=optional
    					</Import-Package>
    					<Export-Package>
    						org.societies.comms.xmpp.pubsub,
		           			jabber.x.data,
							org.jabber.protocol.pubsub,
							org.jabber.protocol.pubsub.errors,
							org.jabber.protocol.pubsub.owner,
							org.jabber.protocol.pubsub.event
		           		</Export-Package>
		           		<Embed-Dependency>*;scope=compile</Embed-Dependency>
						<Embed-Transitive>false</Embed-Transitive>
		         	</instructions>
	       		</configuration>
			</plugin>		
		</plugins>
	</build>
</project>
