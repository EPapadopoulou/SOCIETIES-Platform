<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.societies.security.sign</groupId>
	<artifactId>societies-security-sign</artifactId>
	<!-- the version is the same as the release -->
	<version>${release.version}</version>
	<!-- the packaging tag enables the creation of the correct manifest using the maven-bundle-plugin -->
	<packaging>bundle</packaging>
	
	<description>
    	This bundle provides the ability to digitally sign XML contents and verify signatures.
    </description>
    
	<developers>
		<developer>
			<name>Mitja Vardjan</name>
			<organization>SETCCE</organization>
      		<organizationUrl>http://www.setcce.si</organizationUrl>
		</developer>
	</developers>
	
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>spring-osgi-parent</artifactId>
		<relativePath>../../../parent/spring-osgi.xml</relativePath>
		<version>0.1</version>
	</parent>

	<dependencies>
	<!-- add your dependencies here -->
	<dependency>
		<groupId>org.societies.api.external</groupId>
		<artifactId>societies-api</artifactId>
		<version>${release.version}</version>
	</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>						
						<!-- the API will export all interfaces packages for the rest of modules -->
						<Export-Package>
							org.societies.api.security.sign.**
						</Export-Package>
					</instructions>
				</configuration>
		
			</plugin>
						<!--  used to exclude  some certain files -->
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
             </plugin>

			
			<!-- although there is no test for API yet, we prefer to keep the following plugin -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}</artifactId>
							<version>${release.version}</version>
							<type>bundle</type>
							<overWrite>true</overWrite>
							<outputDirectory>${spring.osgi.deploy.dir}</outputDirectory>
						</artifactItem>
					</artifactItems>
				</configuration>
			</plugin>
		</plugins> 	
	</build>
</project>
