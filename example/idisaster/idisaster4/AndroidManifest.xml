    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />


    <application
        android:icon="@drawable/disaster_launcher" android:label="@string/app_name" 
 		android:debuggable="true" android:allowTaskReparenting="false" android:name="iDisasterApplication">
         
        <activity
            android:name=".StartActivity"
            android:theme="@android:style/Theme.NoTitleBar" >         
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!-- noHistory: the activity will not be shown whne the user pressed on the "back" button -->        
        <activity
            android:name=".LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:noHistory="true" >
        </activity>

        <activity
            android:name=".DisasterActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
        <activity
            android:name=".HomeActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
        
<!--   Remove title with application name in display window 
		<activity
