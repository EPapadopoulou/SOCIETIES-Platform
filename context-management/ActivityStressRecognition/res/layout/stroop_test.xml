<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:layout_width="wrap_content"
		android:background="@drawable/box" android:id="@+id/answer3"
		android:layout_height="wrap_content" android:layout_alignBaseline="@+id/answer1"
		android:layout_alignBottom="@+id/answer1"
		android:layout_alignParentRight="true" android:layout_marginRight="42dp" android:textStyle="bold" android:clickable="true" android:gravity="center"></TextView>
	<TextView android:layout_width="wrap_content"
		android:background="@drawable/box" android:id="@+id/answer4"
		android:layout_height="wrap_content" android:layout_above="@+id/answer1"
		android:layout_alignLeft="@+id/answer1" android:layout_marginBottom="23dp" android:textStyle="bold" android:clickable="true" android:gravity="center"></TextView>
	<TextView android:layout_width="wrap_content"
		android:background="@drawable/box" android:id="@+id/answer2"
		android:layout_height="wrap_content" android:layout_alignBaseline="@+id/answer4"
		android:layout_alignBottom="@+id/answer4" android:layout_alignLeft="@+id/answer3" android:textStyle="bold" android:clickable="true" android:gravity="center"></TextView>
	<TextView android:layout_width="wrap_content"
		android:background="@drawable/box" android:id="@+id/answer1"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_marginLeft="33dp"
		android:layout_marginBottom="50dp" android:textStyle="bold" android:clickable="true" android:gravity="center"></TextView>
	<TextView android:layout_width="wrap_content"
		android:background="@drawable/box_answer" android:id="@+id/question"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" android:layout_marginTop="81dp" android:textStyle="bold" android:gravity="center"></TextView>
	<TextView android:layout_alignParentLeft="true" android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/AnswerType"></TextView>
	<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/progressBar" style="?android:attr/progressBarStyleHorizontal" android:layout_above="@+id/Timer" android:layout_alignParentLeft="true" android:layout_marginBottom="14dp" android:layout_alignParentRight="true"></ProgressBar>
	<TextView android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Timer" android:layout_centerVertical="true" android:layout_centerHorizontal="true"></TextView>

</RelativeLayout>
