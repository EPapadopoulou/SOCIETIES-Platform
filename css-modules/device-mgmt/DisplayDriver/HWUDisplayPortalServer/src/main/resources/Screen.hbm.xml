<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.display.server.model.Screen" table="screen">
        <meta attribute="class-description">
            This class contains the screen detail.
        </meta>
        <id name="screenId" type="string" column="screenID">
            <generator class="native"/>
        </id>
        <property name="locationId" column="locationID" type="string"/>
        <property name="ipAddress" column="ipAddress" type="string"/>
    </class>
</hibernate-mapping>