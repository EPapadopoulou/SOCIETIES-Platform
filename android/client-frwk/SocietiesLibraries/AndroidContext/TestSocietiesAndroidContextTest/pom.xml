<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.societies</groupId>
		<artifactId>android-parent</artifactId>
		<version>RELEASE</version>
	</parent>

	<groupId>org.societies.android.platform.context.test</groupId>
	<artifactId>TestSocietiesAndroidContext</artifactId>
	<name>TestSocietiesContext</name>
	<version>${release.version}</version>
	<packaging>apk</packaging>
	<properties>
		<tested.project.dir>${project.basedir}/../ContainerSocietiesAndroidContext</tested.project.dir>
		<tested.project.android.coverage>${tested.project.dir}/target/org.societies.android.platform.context.container/files/coverage.ec</tested.project.android.coverage>
	</properties>

	<developers>
		<developer>
			<id>pkosmides</id>
			<name>Pavlos Kosmides</name>
			<email>pkosmidi@central.ntua.gr</email>
			<organization>ICCS</organization>
			<organizationUrl>http://www.iccs.gr/</organizationUrl>
			<roles>
				<role>owner</role>
				<role>developer</role>
			</roles>
			<timezone>+2</timezone>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<exclusions>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android-test</artifactId>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.context.container</groupId>
			<artifactId>ContainerSocietiesAndroidContext</artifactId>
			<version>${release.version}</version>
			<scope>provided</scope>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.context.container</groupId>
			<artifactId>ContainerSocietiesAndroidContext</artifactId>
			<version>${release.version}</version>
			<type>apk</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.context</groupId>
			<artifactId>SocietiesAndroidContext</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
			<scope>provided</scope>
		</dependency>
        <dependency>
			<artifactId>xpp3</artifactId>
			<groupId>xpp3</groupId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>emma</groupId>
			<artifactId>emma</artifactId>
			<scope>compile</scope>
		</dependency>

	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<configuration>
					<testCoverage>true</testCoverage>
					<testCreateReport>true</testCreateReport>
					<testTestSize>medium</testTestSize>
					<testCoverageFile>${tested.project.android.coverage}</testCoverageFile>
<!-- 				<testCoverageFile>/data/data/org.societies.android.platform.context.container/files/coverage.ec</testCoverageFile>	-->
					<!--test> <coverage>true</coverage> <createReport>true</createReport> 
						<testSize>medium</testSize> </test -->
				</configuration>
				<extensions>true</extensions>
				<!-- Change the following to true to enable coverage report 
				<executions>
					<execution>
						<id>pull-coverage</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>pull</goal>
						</goals>
						<configuration>
							<pullSource>/data/data/org.societies.android.platform.context.container/files/coverage.ec</pullSource>
							<pullDestination>${tested.project.dir}/target/emma/coverage.ec</pullDestination>
						</configuration>
					</execution>
				</executions>	-->
			</plugin>
		</plugins>
	</build>
