<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunitySigStatusActivity"
    tools:ignore="MergeRootFrame" >

	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
	    >
	    
        <Button
            android:id="@+id/communitySigStatusViewRawDocumentButton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/viewRawDocument" />

        <Button
            android:id="@+id/communitySigStatusCopyRawDocumentUrlButton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/copyUrl" />

    </LinearLayout>
    
</RelativeLayout>
