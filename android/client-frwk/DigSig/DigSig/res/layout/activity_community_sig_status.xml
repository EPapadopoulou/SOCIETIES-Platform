<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunitySigStatusActivity"
    tools:ignore="MergeRootFrame" >

        <Button
            android:id="@+id/communitySigStatusViewRawDocumentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:text="@string/viewRawDocument" />

        <Button
            android:id="@+id/communitySigStatusCopyRawDocumentUrlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/communitySigStatusViewRawDocumentButton"
            android:layout_margin="10dp"
            android:text="@string/copyUrl" />
    
</RelativeLayout>
