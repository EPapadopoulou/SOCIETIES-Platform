<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- regular spring configuration file defining the beans for this bundle. 
		We've kept the osgi definitions in a separate configuration file so that 
		this file can easily be used for integration testing outside of an OSGi environment -->


	<bean id="DecisionMaker" class="org.societies.useragent.decisionmaking.DecisionMaker"
		depends-on="UserFeedback">
		<property name="manager">
			<bean class="org.societies.useragent.conflict.ConflictResolutionManager">
				<property name="rules">
					<list>
						<bean class="org.societies.useragent.conflict.ConfidenceTradeoffRule"></bean>
						<bean class="org.societies.useragent.conflict.IntentPriorRule"></bean>
					</list>
				</property>
			</bean>
		</property>
		<property name="feedbackManager" ref="UserFeedback"></property>
	</bean>


</beans>

