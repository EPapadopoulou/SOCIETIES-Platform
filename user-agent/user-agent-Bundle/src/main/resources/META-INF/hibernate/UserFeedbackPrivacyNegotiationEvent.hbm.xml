<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.api.internal.schema.useragent.feedback.UserFeedbackPrivacyNegotiationEvent"
           table="UserFeedbackPrivacyNegotiationEvent">
        <!--<meta attribute="class-description">
            This class contains the employee detail.
        </meta>-->
        <id name="requestId" type="string" column="requestId">
            <generator class="uuid"/>
        </id>

        <property name="method" column="method" type="org.societies.api.schema.useragent.feedback.FeedbackMethodType"/>
        <property name="stage" column="stage" type="org.societies.api.schema.useragent.feedback.FeedbackStage"/>
        <property name="requestDate" column="requestDate" type="java.util.Date"/>
        <property name="type" column="type" type="int"/>

        <set name="responsePolicy">
            <key column="ResponsePolicy_id"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.ResponsePolicy"/>
        </set>

        <property name="negotiationDetails"
                  column="negotiationDetails"
                  type="org.societies.api.internal.schema.useragent.feedback.NegotiationDetailsBean"/>

    </class>
</hibernate-mapping>
