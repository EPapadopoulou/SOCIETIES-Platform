<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.RequestItem"
           table="UFRequestItem">

        <id name="requestItemId" type="string" column="requestItemId">
            <generator class="uuid"/>
        </id>

        <list name="actions" lazy="false" cascade="all">
            <key column="requestItemId"/>
            <index column="idx"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Action"/>
        </list>

        <list name="conditions" lazy="false" cascade="all">
            <key column="requestItemId"/>
            <index column="idx"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Condition"/>
        </list>

        <property name="optional" column="optional" type="boolean"/>

        <one-to-one name="resource"
                    class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Resource"
                    cascade="all"/>

    </class>
</hibernate-mapping>
