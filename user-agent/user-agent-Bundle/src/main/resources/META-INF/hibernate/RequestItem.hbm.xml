<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.RequestItem"
           table="PrivacyPolicyRequestItem">
        <!--<meta attribute="class-description">
            This class contains the employee detail.
        </meta>-->
        <id name="requestItemId" type="string" column="requestItemId">
            <generator class="uuid"/>
        </id>

        <array name="actions" table="RequestItem_actions">
            <key column="action_id"/>
            <index column="action_index"/>
            <element column="action" type="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Action"/>
        </array>

        <array name="conditions">
            <key column="condition_id"/>
            <index column="condition_index"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Condition"/>
        </array>

        <property name="optional" column="optional" type="boolean"/>

        <property name="resource" column="resource"
                  type="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.Resource"/>

    </class>
</hibernate-mapping>
