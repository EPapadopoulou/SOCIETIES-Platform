<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.ResponsePolicy"
           table="UFResponsePolicy">

        <id name="responsePolicyId" type="string" column="responsePolicyId">
            <generator class="assigned"/>
        </id>

        <list name="responseItems"
              lazy="false" cascade="all">
            <key column="responsePolicyId" not-null="false"/>
            <index column="idx"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.ResponseItem"/>
        </list>

        <property name="negotiationStatus" column="negotiationStatus"
                  type="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.NegotiationStatus"/>

        <one-to-one name="requestor"
                    class="org.societies.api.schema.identity.RequestorBean"
                    cascade="all"
                    lazy="false"/>

    </class>
</hibernate-mapping>
