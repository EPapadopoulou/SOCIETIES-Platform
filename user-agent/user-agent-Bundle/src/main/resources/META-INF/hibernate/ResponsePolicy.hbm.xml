<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.ResponsePolicy"
           table="PrivacyPolicyResponsePolicy">

        <id name="responsePolicyId" type="string" column="responsePolicyId">
            <generator class="uuid"/>
        </id>

        <set name="responseItems">
            <key column="ResponseItem_id"/>
            <one-to-many class="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.ResponseItem"/>
        </set>

        <property name="negotiationStatus" column="negotiationStatus"
                  type="org.societies.api.schema.privacytrust.privacy.model.privacypolicy.NegotiationStatus"/>

        <property name="requestor" column="requestor" type="org.societies.api.schema.identity.RequestorBean"/>

    </class>
</hibernate-mapping>
