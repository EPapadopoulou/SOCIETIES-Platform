<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
        >

    <!-- regular spring configuration file defining the beans for this bundle.
        We've kept the osgi definitions in a separate configuration file so that
        this file can easily be used for integration testing outside of an OSGi environment -->

    <bean id="userActionMonitor"
          class="org.societies.useragent.monitoring.UserActionMonitor"
          name="userActionMonitor"
          depends-on="ctxBroker, eventManager, commsManager, cssManager"
          init-method="initialiseUserActionMonitor">
        <property name="ctxBroker" ref="ctxBroker"/>
        <property name="eventMgr" ref="eventManager"/>
        <property name="commsMgr" ref="commsManager"/>
        <property name="cssMgr" ref="cssManager"/>
    </bean>

    <bean id="userFeedback"
          class="org.societies.useragent.feedback.UserFeedback"
          name="feedback"
          depends-on="commsManager"
          init-method="initialiseUserFeedback">
        <property name="commsMgr" ref="commsManager"/>
        <property name="pubsub" ref="pubsub"/>
        <property name="privacyPolicyNegotiationHistoryRepository" ref="privacyPolicyNegotiationHistoryRepositoryBean"/>
        <property name="userFeedbackHistoryRepository" ref="userFeedbackHistoryRepositoryBean"/>
    </bean>

    <bean id="decisionMaker"
          class="org.societies.useragent.decisionmaking.DecisionMaker"
          name="dm"
          depends-on="conflictResolutionManager,userFeedback">
        <property name="manager" ref="conflictResolutionManager"/>
        <property name="feedbackHandler" ref="userFeedback"/>
    </bean>

    <bean id="conflictResolutionManager"
          class="org.societies.useragent.conflict.ConflictResolutionManager"
          name="conflict">
    </bean>

    <bean id="uaCommsClient"
          class="org.societies.useragent.comms.UACommsClient"
          depends-on="commsManager"
          init-method="initService">
        <property name="commsMgr" ref="commsManager"/>
    </bean>

    <bean id="uaCommsServer"
          class="org.societies.useragent.comms.UACommsServer"
          depends-on="commsManager, userActionMonitor, userFeedback"
          init-method="initService">
        <property name="commsMgr" ref="commsManager"/>
        <property name="internalUserActionMonitor" ref="userActionMonitor"/>
        <property name="feedback" ref="userFeedback"/>
    </bean>

    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>

        <property name="annotatedClasses">
            <list>
                <value>org.societies.api.internal.schema.useragent.feedback.UserFeedbackPrivacyNegotiationEvent</value>
                <value>org.societies.api.schema.useragent.feedback.UserFeedbackBean</value>
            </list>
        </property>

        <!--<property name="annotatedPackages">
            <list>
                <value>org.societies.cis.directory.model</value>
            </list>
        </property>-->

        <property name="hibernateProperties">
            <props>
                <!-- <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.hbm2ddl.auto">create-drop</prop>
                <prop key="hibernate.jdbc.batch_size">0</prop> -->
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.cache.use_second_level_cache">false</prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="hibernate.format_sql">true</prop>
            </props>
        </property>

        <!--<property name="mappingDirectoryLocations" value="classpath:META-INF/hibernate"/>-->

        <property name="mappingResources">
            <list>
                <value>META-INF/hibernate/Action.hbm.xml</value>
                <value>META-INF/hibernate/Condition.hbm.xml</value>
                <value>META-INF/hibernate/NegotiationDetailsBean.hbm.xml</value>
                <value>META-INF/hibernate/RequestItem.hbm.xml</value>
                <value>META-INF/hibernate/RequestorBean.hbm.xml</value>
                <value>META-INF/hibernate/Resource.hbm.xml</value>
                <value>META-INF/hibernate/ResponseItem.hbm.xml</value>
                <value>META-INF/hibernate/ResponsePolicy.hbm.xml</value>
                <value>META-INF/hibernate/UserFeedbackBean.hbm.xml</value>
                <value>META-INF/hibernate/UserFeedbackPrivacyNegotiationEvent.hbm.xml</value>
            </list>
        </property>

    </bean>

    <bean id="userFeedbackHistoryRepositoryBean"
          class="org.societies.useragent.feedback.UserFeedbackHistoryRepository">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="privacyPolicyNegotiationHistoryRepositoryBean"
          class="org.societies.useragent.feedback.PrivacyPolicyNegotiationHistoryRepository">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>


</beans>
