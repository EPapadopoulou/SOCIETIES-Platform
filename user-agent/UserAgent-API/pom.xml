<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

	<!-- All projects should inherit from societies-parent -->
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>virgo-parent</artifactId>
		<version>0.1</version>
                <relativePath>../../parent/virgo.xml</relativePath>
	</parent>

	<!-- groupId is set in parent pom -->
	<artifactId>css_userAgent_api</artifactId>
	<version>${version.ua}</version>
	<name>User Agent API</name>
	<packaging>bundle</packaging> 

	<developers>
    <developer>
      <name>Sarah Gallacher</name>
      <email>S.Gallacher@hw.ac.uk</email>
      <organization>HWU</organization>
      <organizationUrl>http://www.hw.ac.uk/</organizationUrl>
      <roles>
        <role>Senior Developer</role>
      </roles>
      <timezone>+0</timezone>
    </developer>
	</developers>

	<!-- List dependencies here -->
	<!--  
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>

	</dependencies>
	 -->



<build>
	<plugins>
	  <plugin>
    		<groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
       </plugin>
            
       
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
				<instructions>
						<Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
					    <_nouses>true</_nouses>
					</instructions>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <artifactItems>
                        <artifactItem>
                            <groupId>${groupId}</groupId>
                            <artifactId>${artifactId}</artifactId>
                            <version>${version.ua}</version>
                            <type>jar</type>
                            <overWrite>true</overWrite>
                            <outputDirectory>${virgo.home}/pickup/</outputDirectory>                                                        
                        </artifactItem>
                    </artifactItems>                                                    
                </configuration>
      		</plugin>	
         
         </plugins>
	</build>


</project>
